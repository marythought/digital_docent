<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:page_title) %></th>
      <th><%= model_class.human_attribute_name(:work_title) %></th>
      <th><%= model_class.human_attribute_name(:other_craft) %></th>
      <th><%= model_class.human_attribute_name(:other_artist) %></th>
      <th><%= model_class.human_attribute_name(:type_of_item) %></th>
      <th><%= model_class.human_attribute_name(:material) %></th>
      <th><%= model_class.human_attribute_name(:technique) %></th>
      <th><%= model_class.human_attribute_name(:created) %></th>
      <th><%= model_class.human_attribute_name(:signature) %></th>
      <th><%= model_class.human_attribute_name(:features) %></th>
      <th><%= model_class.human_attribute_name(:date_acquired) %></th>
      <th><%= model_class.human_attribute_name(:gift_of) %></th>
      <th><%= model_class.human_attribute_name(:text_documents) %></th>
      <th><%= model_class.human_attribute_name(:featured) %></th>
      <th><%= model_class.human_attribute_name(:artist_id) %></th>
      <th><%= model_class.human_attribute_name(:room_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.id, item_path(item) %></td>
        <td><%= item.page_title %></td>
        <td><%= item.work_title %></td>
        <td><%= item.other_craft %></td>
        <td><%= item.other_artist %></td>
        <td><%= item.type_of_item %></td>
        <td><%= item.material %></td>
        <td><%= item.technique %></td>
        <td><%= item.created %></td>
        <td><%= item.signature %></td>
        <td><%= item.features %></td>
        <td><%= item.date_acquired %></td>
        <td><%= item.gift_of %></td>
        <td><%= item.text_documents %></td>
        <td><%= item.featured %></td>
        <td><%= item.artist_id %></td>
        <td><%= item.room_id %></td>
        <td><%= item.name %></td>
        <td><%=l item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_path(item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_path(item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_path,
            :class => 'btn btn-primary' %>
