<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>
        Browse By Item
      </h1>
      <p id="notice"><%= notice %></p>
    </div>

  <div class="row">
    <% @items.each do |item| %>

    <div class="col-md-4">
      <div class="thumbnail">
        <% if item.images.length > 0 %>
          <img alt="<%= item.images.first.file_link %>" src="<%= item.images.first.file_link %>">
          <div class="caption">
        <% else %>
          <img alt="This item needs an image!" src="<%= asset_path('rc-logo.jpg')%>">
          <div class="caption">
        <% end %>
          <h3>
            <%= item.name %>
          </h3>
          <p>
            by <%= link_to item.artist.name, item.artist %>
          </p>
          <p>
            location: <%= link_to item.room.name, item.room %> (floor <%= item.room.floor.name %>)
          </p>
          <% if item.gift_of.present? %>
            <p>
              Gift of: <%= item.gift_of %>
            </p>
          <% end %>
          <p>
            <%= link_to 'Show', item, class:"btn btn-primary" %>
          </p>
          <p>
            <%= link_to 'Edit', edit_item_path(item) %>
          </p>
          <p>
            <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
