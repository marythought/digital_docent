<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Work title</th>
      <th>Name</th>
      <th>Artist</th>
      <th>Date acquired</th>
      <th>Gift of</th>
      <th>Featured</th>
      <th>Room</th>
      <th>Floor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.work_title %></td>
        <td><%= item.name %></td>
        <td><%= link_to item.artist.name, item.artist %></td>
        <td><%= item.date_acquired %></td>
        <td><%= item.gift_of %></td>
        <td><%= item.featured %></td>
        <td><%= link_to item.room.name, item.room %></td>
        <td><%= item.room.floor.name %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

