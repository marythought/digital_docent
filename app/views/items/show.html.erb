<p id="notice"><%= notice %></p>

<h1>
  <% if @item.page_title.empty? %>
    <%= @item.work_title %>
  <% else %>
    <%= @item.page_title %>
  <% end %>
</h1>

<p>
  <% if @item.images.length > 0 %>
    <img src="<%= @item.images[0].file_link %>"
  <% end %>
</p>

<p><%= link_to 'Add new Image', new_image_path %></p>

<p>
  <% if @item.images.length > 0 %>
    <strong>All Images:</strong>
    <% @item.images.each do |image| %>
      <ul>
        <li><img src="<%= image.file_link %>"</li>
      </ul>
    <% end %>
  <% end %>
</p>

<p>
  <% if @item.media.length > 0 %>
    <strong>item Media:</strong>
    <% @item.media.each do |medium| %>
      <ul>
        <li><img src="<%= medium.file_link %>"</li>
      </ul>
    <% end %>
  <% end %>
</p>

