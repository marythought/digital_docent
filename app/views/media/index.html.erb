<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>
        Browse By Media
      </h1>
      <p id="notice"><%= notice %></p>
    </div>

  <div class="row">
    <% @media.each do |medium| %>

    <div class="col-md-7">
      <div class="thumbnail">
        <%= medium.file_link.html_safe %>
        <div class="caption">
          <h3>
            <%= medium.multimediable.name %>
          </h3>
          <p>
            <%= link_to 'Show', medium.multimediable, class:"btn btn-primary" %>
          </p>
          <% if @current_admin %>
          <p>
            <%= link_to 'Edit', edit_medium_path(medium) %>
          </p>
          <p>
            <%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
